    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (Console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build", // Ensures the project is built before debugging
            "program": "${workspaceFolder}/bin/Debug/net9.0/Cello.dll", // Adjust the path if necessary
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false, // Stops at the entry point to ensure breakpoints are hit
            "justMyCode": true // Ensures debugging focuses on your code
        }
    ]
}